// Declarative Jenkins pipeline for Maven (Spring MVC) project
// - Detects Unix vs Windows agent and runs appropriate commands
// - Builds, runs tests, archives produced JARs, and publishes JUnit results
// Notes:
// - Adjust the tool names in the `tools` block to match your Jenkins global tool configuration
// - If you use Docker agents or a specific Jenkins image, consider replacing the `agent any` with `agent { docker { image 'maven:3.8.8-jdk-11' } }`

pipeline {
    agent any

    tools {
        // These names must match the Tool names configured in Jenkins -> Global Tool Configuration
        // If you don't have these configured, you can remove the tools block and rely on PATH
        maven 'Maven'
        jdk 'JDK11'
    }

    environment {
        MAVEN_OPTS = '-Xmx1024m'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'mvn -B -DskipTests clean package'
                    } else {
                        bat "mvn -B -DskipTests clean package"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    if (isUnix()) {
                        sh 'mvn -B test'
                    } else {
                        bat 'mvn -B test'
                    }
                }
            }
        }

        stage('Archive') {
            steps {
                // Archive generated artifacts (jar/war). Allow empty if build produces nothing locally in some flows
                archiveArtifacts artifacts: 'target/*.jar, target/*.war', allowEmptyArchive: true
            }
        }

        stage('Publish Test Results') {
            steps {
                // Publish JUnit results if present
                junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'
            }
        }
    }

    post {
        success {
            echo 'Build finished: SUCCESS'
        }
        unstable {
            echo 'Build finished: UNSTABLE'
        }
        failure {
            echo 'Build finished: FAILURE'
        }
        always {
            // Cleanup workspace to keep nodes tidy
            cleanWs()
        }
    }
}
