pipeline {
    agent any  // run on any available Jenkins agent

    tools {
        // If you’ve configured JDK 21 or 17 on Jenkins global tools
        jdk 'jdk21'   // name that matches your Jenkins JDK tool configuration
        maven 'maven3' // name matching Maven tool, if you use Maven
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone your GitHub repo
                git branch: 'main',
                    url: 'https://github.com/MrAbhishek01/SpringBootMVCProjects.git'
            }
        }

        stage('Build') {
            steps {
                // If using Maven wrapper (mvnw) or Maven installed
                sh './mvnw clean package -DskipTests=true'
                // Or if not using wrapper:
                // sh 'mvn clean package -DskipTests=true'
            }
        }

        stage('Test') {
            steps {
                // Run tests (if you have tests configured)
                sh './mvnw test'
            }
        }

        stage('Package') {
            steps {
                // Package the application (jar/war)
                sh './mvnw clean package'
            }
        }

        stage('Deploy (optional)') {
            steps {
                // Example deploy — adapt as needed
                echo 'Deploy step — add your deploy logic here'
            }
        }
    }

    post {
        success {
            echo "Build, test and package completed successfully."
        }
        failure {
            echo "Pipeline failed. Check logs."
        }
    }
}
